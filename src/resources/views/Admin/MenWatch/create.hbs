<div class="mt-4">
    <h3>Đăng Mẫu Đồng Hồ Mới</h3>
    <form method="POST" action="/admin/MenWatch/store">
        <div class="mb-3">
            <label for="name" class="form-label">Tên Đồng Hồ</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="mb-3">
            <label for="cost" class="form-label">Giá</label>
            <input type="text" class="form-control" name="cost">
        </div>
        <div class="mb-3">
            <label for="typeMachine" class="form-label">Loại máy</label>
            <input type="text" class="form-control" name="typeMachine">
        </div>
        <div class="mb-3">
            <label for="thinness" class="form-label">Độ mỏng mặt</label>
            <input type="text" class="form-control" name="thinness">
        </div>
        <div class="mb-3">
            <label for="material" class="form-label">Chất liệu</label>
            <input type="text" class="form-control" name="material">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Ảnh</label>
            <input type="text" class="form-control" name="image">
        </div>
        <div class="mb-3">
            <label for="userObject" class="form-label">Đối tượng sử dụng</label>
            <input type="text" class="form-control" name="userObject">
        </div>
        <div class="mb-3">
            <label for="diameter" class="form-label">Đường kính mặt</label>
            <input type="text" class="form-control" name="diameter">
        </div>
        <div class="mb-3">
            <label for="strapMaterial" class="form-label">Chất liệu dây đeo</label>
            <input type="text" class="form-control" name="strapMaterial">
        </div>
        <div class="mb-3">
            <label for="waterResist" class="form-label">Chống thấm nước</label>
            <input type="text" class="form-control" name="waterResist">
        </div>
        <div class="mb-3">
            <label for="brand" class="form-label">Thương hiệu</label>
            <input type="text" class="form-control" name="brand">
        </div>
        <div class="mb-3">
            <label for="company" class="form-label">Hãng</label>
            <input type="text" class="form-control" name="company">
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>